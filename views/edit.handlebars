<div class="container my-3 mx-auto">
  <div class="col-12 col-md-7 mx-auto">
    <h3>變更支出紀錄</h3>

    <form class="form mt-5" action="/expenses/{{expense._id}}?_method=PUT" method="POST">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">名稱</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" maxlength="10" value="{{expense.name}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">日期</label>
        <div class="col-sm-10">
          <input class="form-control" name="date" type="date" value="{{expense.date}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">類別</label>
        <div class="col-sm-10">
          <select class="custom-select" name="categoryId" required>
            <option value="" hidden>請選擇...</option>
            {{#each categoryList}}
              <option value="{{this._id}}" {{#isEqual this._id ../expense.categoryId}}selected{{/isEqual}}>
                {{this.name}}
              </option>
            {{/each}}
            
            
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">店家</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="merchant" maxlength="10" value="{{expense.merchant}}">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
          <input type="number" min="0" max="9999999" class="form-control" name="amount" value="{{expense.amount}}"
            required>
        </div>
      </div>

      <div class="add-expense d-flex justify-content-center mt-5">
        <a href="/" class="btn btn-primary mr-5">取消變更</a>
        <button class="btn btn-primary" type="submit">確認變更</button>

      </div>
    </form>
  </div>
</div>