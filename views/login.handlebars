<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card card-body px-4 shadow bg-white rounded">
      <h2 class="text-center form-title ">Login</h2>
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="form-group row ">
          <div class="col-sm-2">
            <label for="email" class="form-label mt-2 ml-1" >Email</label>
          </div>
          <div class="col-sm-10">
            <input class="form-control" type="email" name="email" id="email" placeholder="Enter Email..." value="{{email}}" required>
          </div>
        </div>
        <div class="form-group row ">
          <div class="col-sm-2">
            <label for="password" class="form-label mt-2 ml-1">Password</label>
          </div>
          <div class="col-sm-10">
            <input class="form-control" type="password" name="password" id="password" placeholder="Enter Password..." value="{{password}}"
              required>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        
      </form>
      <p class="lead mt-3">
        No account ? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>