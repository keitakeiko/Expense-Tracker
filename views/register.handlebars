<div class="row">
  <div class="col-md-8 m-auto">
    <div class="card card-body px-5 shadow bg-white rounded">
      <h2 class="text-center form-title">Register</h2>
      {{>message}}
      <form action="/users/register" method="POST">
        <div class="form-group row ">
          <div class="col-sm-3">
            <label for="name" class="form-label mt-2 ml-1">Name</label>
          </div>
          <div class="col-sm-9">
            <input class="form-control" type="text" name="name" id="name" maxlength="10" value="{{name}}"
              placeholder="Enter Name...">
          </div>
        </div>
        <div class="form-group row ">
          <div class="col-sm-3">
            <label for="email" class="form-label mt-2 ml-1">Email</label>
          </div>
          <div class="col-sm-9">
            <input class="form-control" type="email" name="email" id="email" maxlength="30" value="{{email}}"
              placeholder="Enter Email...">
          </div>
        </div>
        <div class="form-group row ">
          <div class="col-sm-3">
            <label for="password" class="form-label mt-2 ml-1">Password</label>
          </div>
          <div class="col-sm-9">
            <input class="form-control" type="password" name="password" id="password" maxlength="20"
              value="{{password}}" placeholder="Enter Password...">
          </div>
        </div>
        <div class="form-group row ">
          <div class="col-sm-3">
            <label for="confirmPassword" class="form-label mt-2 ">Confirm Password</label>
          </div>
          <div class="col-sm-9">
            <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" maxlength="20"
              value="{{confirmPassword}}" placeholder="Confirm Password...">
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
        {{!-- <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Register</a> --}}
      </form>
      <p class="lead mt-3">
        Already have an account ? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>