<div class="container my-3 mx-auto">
  <div class="col-12 col-md-7 mx-auto">
    <h3>請輸入你的支出</h3>

    <form class="form mt-5" action="/expenses" method="POST">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">名稱</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" maxlength="10" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">日期</label>
        <div class="col-sm-10">
          <input class="form-control" name="date" type="date" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">類別</label>
        <div class="col-sm-10">
          <select class="custom-select" name="category" required>
            <option value="" selected disabled hidden>請選擇...</option>
            {{#each category}}
            <option value="{{this.name}}">{{this.label}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">店家</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="merchant" maxlength="10">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
          <input type="number" min="0" max="9999999" class="form-control" name="amount" required>
        </div>
      </div>

      <div class="add-expense d-flex justify-content-center mt-5">
        <button class="btn btn-primary" type="submit">新增支出</button>
      </div>
    </form>
  </div>
</div>